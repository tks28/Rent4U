<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eventaid">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EventAid">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditCarDetails" />
        <activity android:name=".AddTechnicianDetails" />
        <activity android:name=".AddRenterDetails" />
        <activity android:name=".AddCar" />
        <activity android:name=".MainActivity"/>
        <activity
            android:name=".AddBrand"
            android:label="Add New Brand"
            android:parentActivityName=".Inventory" />
        <activity
            android:name=".InventoryCarDetails"
            android:label="Car Details" />
        <activity
            android:name=".InventoryCar"
            android:label="Car List" />
        <activity
            android:name=".DamagedCarDetails"
            android:label="Damaged Car Details" />
        <activity
            android:name=".RentedDetails"
            android:label="Rented Car Details" />
    </application>

</manifest>